{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src-docs/**/*",
    "src-docs/**/*.vue"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "paths": { "@/*": ["./src/*"], "vuetify-swatches": ["./src/index.ts"] },
    "lib": ["ESNext", "DOM"]
  }
}
