{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "vuetify-swatches",
  "version": "0.3.2",
  "description": "Color Swatch component for Vuetify3.",
  "keywords": [
    "vuejs",
    "vue",
    "vue-components",
    "color-picker",
    "color-palette",
    "swatches",
    "vue3",
    "vue-plugin",
    "vue-resource",
    "vuetify",
    "vuetify3",
    "vuetify-components"
  ],
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "Logue",
    "email": "logue@hotmail.co.jp",
    "url": "https://logue.dev/"
  },
  "homepage": "https://github.com/logue/vuetify-swatches",
  "repository": {
    "type": "git",
    "url": "git@github.com:logue/vuetify-swatches.git"
  },
  "bugs": {
    "url": "https://github.com/logue/vuetify-swatches/issues"
  },
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "style": "dist/style.css",
  "browser": {
    "./sfc": "./src/components/VSwatches.vue"
  },
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    },
    "./dist/style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "files": [
    "dist",
    "src/components/VSwatches.vue"
  ],
  "engines": {
    "node": ">=16.16.0",
    "yarn": ">=1.22.10"
  },
  "packageManager": "yarn@3.2.2",
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "clean": "rimraf node_modules/.vite ",
    "build": "vite build & vue-tsc --declaration --emitDeclarationOnly",
    "build:analyze": "vue-tsc --noEmit & vite build --mode analyze",
    "build:docs": "vite build --config vite.config.docs.ts",
    "build:clean": "rimraf dist",
    "lint": "eslint . --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint && prettier . -w -u",
    "lint:style": "stylelint . --cache --cache-location ./node_modules/.vite/vite-plugin-stylelint",
    "lint:markup": "vue-tsc --noEmit",
    "preview": "vite preview --config vite.config.docs.ts",
    "prepare": "husky install"
  },
  "peerDependencies": {
    "vue": "^3.2.37",
    "vuetify": "^3.0.0-beta.7"
  },
  "devDependencies": {
    "@codemirror/lang-html": "^6.1.0",
    "@types/node": "^18.7.1",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "@vitejs/plugin-vue": "^3.0.1",
    "@vue/tsconfig": "^0.1.3",
    "codemirror": "^6.0.1",
    "eslint": "^8.21.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.4.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.6",
    "eslint-plugin-tsdoc": "^0.2.16",
    "eslint-plugin-vue": "^9.3.0",
    "eslint-plugin-vuejs-accessibility": "^1.2.0",
    "eslint-plugin-vuetify": "^1.1.0",
    "eslint-plugin-yaml": "^0.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "postcss-html": "^1.5.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "rollup-plugin-visualizer": "^5.7.1",
    "sass": "1.54.4",
    "stylelint": "^14.10.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-scss": "^7.0.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "typescript": "^4.7.4",
    "vite": "^3.0.5",
    "vite-plugin-banner": "^0.3.0",
    "vite-plugin-checker": "^0.4.9",
    "vite-plugin-vuetify": "^1.0.0-alpha.14",
    "vue": "^3.2.37",
    "vue-codemirror6": "0.6.8",
    "vue-eslint-parser": "^9.0.3",
    "vue-tsc": "^0.40.1",
    "vuetify": "^3.0.0-beta.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.vue": "vue-tsc --noEmit",
    "*.{js,ts,json,yml,yaml,vue,htm,html}": "eslint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint",
    "*.{css,sass,scss,vue,htm,html}": "stylelint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-stylelint",
    "*": "prettier -w -u"
  },
  "resolutions": {
    "prettier": "^2.7.1"
  }
}
